<main class="flex-grow-1">
  <div class="d-flex justify-content-center align-items-center flex-column" style="min-height: 80vh;">
    <div class="container border border-dark border-2 rounded p-4 bg-light" style="width: 30rem;">
      <h1 class="text-center">新規登録</h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :ユーザ名 %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上で記入してください)</em> 
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :パスワード確認用 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <%= f.submit "新規登録", class: "btn btn-dark actions my-3 w-100" %> 
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</main>
